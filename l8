index.js

// Load environment variables
require('dotenv').config();

const express = require('express');
const app = express();

// Read variables from process.env
const APP_NAME = process.env.APP_NAME || 'DefaultApp';
const APP_ENV = process.env.APP_ENV || 'production';
const GREETING = process.env.GREETING_MESSAGE || 'Hello World';
const PORT = process.env.APP_PORT || 3000;

// Endpoint to return environment info
app.get('/', (req, res) => {
  res.json({
    appName: APP_NAME,
    environment: APP_ENV,
    message: GREETING
  });
});

// Start server
app.listen(PORT, () => {
  console.log(`${APP_NAME} running in ${APP_ENV} mode on port ${PORT}`);
});

.env
APP_NAME=EnvMicroservice
APP_ENV=development
APP_PORT=3000
GREETING_MESSAGE=Hello from environment!

RUN THE COMMANDS IN TERMINAL 
cd env-microservice
npm init -y
npm install express dotenv
node index.js
OPEN IN BROWSER 
http://localhost:3000/
